# Set the primary font to Roboto
font pango:System Roboto Display 10

new_window pixel 0
for_window [class="^.*"] border pixel 0
for_window [class="cheese"] border normal

# Set floating window types
for_window [class="VolumeSlider"] floating enable
for_window [class="VolumeSlider"] move absolute position 3740px 700px

for_window [class="Nm-connection-editor"] floating enable
for_window [class="Nm-connection-editor"] move absolute position 2990px 60px

for_window [window_role="pop-up"] floating enable
for_window [title="Android Emulator - Pixel_2_API_29:5554"] floating enable

# Set gaps
gaps inner 30
gaps top 10

# startup programs
exec_always --no-startup-id picom --config ~/.config/picom.conf -f --experimental-backends
exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/larry-chen-Nte-4RiRfwU-unsplash.jpg
exec clight &
exec libinput-gestures-setup start
exec dunst &
exec polybar left &
exec polybar right &
exec polybar play &

# Set movement keys
set $up k
set $down j
set $left h
set $right l

# Use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

# Start a terminal
bindsym Mod4+Return exec alacritty

# Kill focused window
bindsym Mod4+Shift+q kill

# Launch rofi
bindsym Mod4+d --release exec rofi -show drun -theme /home/devin/.config/rofi/config.rasi.back -lines 3 -width 100 -eh 2 -font "System Roboto Display 50" -no-show-match --release

# Lock
bindsym Mod4+l exec /home/devin/bin/lock

# alternatively, you can use the cursor keys:
bindsym Mod4+Left focus left
bindsym Mod4+Down focus down
bindsym Mod4+Up focus up
bindsym Mod4+Right focus right

# move focused window
bindsym Mod4+Shift+$left move left
bindsym Mod4+Shift+$down move down
bindsym Mod4+Shift+$up move up
bindsym Mod4+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym Mod4+Shift+Left move left
bindsym Mod4+Shift+Down move down
bindsym Mod4+Shift+Up move up
bindsym Mod4+Shift+Right move right

# move workspaces
bindsym Mod4+Mod1+$left move workspace to output left
bindsym Mod4+Mod1+Left move workspace to output left
bindsym Mod4+Mod1+$right move workspace to output left
bindsym Mod4+Mod1+Right move workspace to output right

# split in horizontal orientation
bindsym Mod4+h split h

# split in vertical orientation
bindsym Mod4+v split v

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen toggle

# toggle tiling / floating
bindsym Mod4+s floating toggle

# Special Key Bindings
bindcode 121 exec amixer set Master toggle && /home/devin/bin/volume_slider
bindcode 122 exec amixer set Master 5%- && /home/devin/bin/volume_slider
bindcode 123 exec amixer set Master 5%+ && /home/devin/bin/volume_slider

# Media player controls
bindcode 171 exec playerctl next
bindcode 172 exec playerctl play-pause
bindcode 173 exec playerctl previous
bindcode 174 exec playerctl play-pause

bindcode 232 exec busctl call org.clightd.clightd /org/clightd/clightd/Backlight org.clightd.clightd.Backlight LowerAll "d(bdu)s" 0.1 0 0 0 ""
bindcode 233 exec busctl call org.clightd.clightd /org/clightd/clightd/Backlight org.clightd.clightd.Backlight RaiseAll "d(bdu)s" 0.1 0 0 0 "" 

# Define Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Set Workspace Monitor Config
workspace $ws1 output DP-0.1 DP-2
workspace $ws2 output DP-0.1 DP-2
workspace $ws3 output DP-0.2 DP-2
workspace $ws4 output DP-0.2 DP-2
workspace $ws9 output DP-0.2 DP-2
workspace $ws10 output DP-0.2 DP-2

# Switch to workspace
bindsym Mod4+1 workspace $ws1
bindsym Mod4+2 workspace $ws2
bindsym Mod4+3 workspace $ws3
bindsym Mod4+4 workspace $ws4
bindsym Mod4+5 workspace $ws5
bindsym Mod4+6 workspace $ws6
bindsym Mod4+7 workspace $ws7
bindsym Mod4+8 workspace $ws8
bindsym Mod4+9 workspace $ws9
bindsym Mod4+0 workspace $ws10

# Move focused container to workspace
bindsym Mod4+Shift+1 move container to workspace $ws1
bindsym Mod4+Shift+2 move container to workspace $ws2
bindsym Mod4+Shift+3 move container to workspace $ws3
bindsym Mod4+Shift+4 move container to workspace $ws4
bindsym Mod4+Shift+5 move container to workspace $ws5
bindsym Mod4+Shift+6 move container to workspace $ws6
bindsym Mod4+Shift+7 move container to workspace $ws7
bindsym Mod4+Shift+8 move container to workspace $ws8
bindsym Mod4+Shift+9 move container to workspace $ws9
bindsym Mod4+Shift+0 move container to workspace $ws10

# Set workspace specific programs
assign [class="code-oss"] $ws3
assign [class="discord"] $ws9
assign [class="Anaconda-Navigator"] $ws3

# Reload the configuration file
bindsym Mod4+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod4+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym Mod4+Shift+e exit

# Resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or Mod4+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod4+r mode "default"
}

bindsym Mod4+r mode "resize"
