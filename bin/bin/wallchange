#!/bin/bash

DESKTOP=$(bspc query -D -d focused --names)
echo $DESKTOP

case $DESKTOP in
    term)
        WALLPAPER=term.jpg
        ;;
    brws)
        WALLPAPER=brws.jpg
        ;;
    code)
        WALLPAPER=code.jpg
        ;;
    arts)
        WALLPAPER=arts.jpg
        ;;
    dscd)
        WALLPAPER=dscd.jpg
        ;;
    spfy)
        WALLPAPER=spfy.jpg
        ;;
    *)
        WALLPAPER=""
        ;;
esac

feh --bg-scale /home/devin/Pictures/Wallpapers/bspwm/$WALLPAPER
